<div class="w-100">
    <table class="table table-striped table-bordered mt-3 col-md-6 w-50">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Nombre</th>
          <th scope="col">PJ</th>
          <th scope="col">Pts.</th>
          <th scope="col">G</th>
          <th scope="col">E</th>
          <th scope="col">P</th>
          <th scope="col">GF</th>
          <th scope="col">GC</th>
          <th scope="col">Dif.</th>
        </tr>
      </thead>
      <tbody>
        {{#each Table}}
            <tr>
              <th scope="row">{{name}}</th>
              <td>{{games}}</td>
              <td>{{points}}</td>
              <td>{{win}}</td>
              <td>{{draw}}</td>
              <td>{{lose}}</td>
              <td>{{goalsFor}}</td>
              <td>{{goalsAgainst}}</td>
              <td>{{goalDif}}</td>
            </tr>
        {{/each}}
      </tbody>
    </table>
    
</div>
